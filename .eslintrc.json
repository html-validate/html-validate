{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "sidvind/es6"
  ],
  "rules": {
    "no-console": "warn",
    "space-before-blocks": "off",
    "brace-style": "off",
    "strict": "off",
    "no-undef": "off"
  },
  "overrides": [
    {
      "files": "*.spec.ts",
      "env": {
        "mocha": true
      },
      "plugins": [
        "mocha"
      ],
      "rules": {
        "mocha/no-exclusive-tests": "warn"
      }
    }
  ]
}
