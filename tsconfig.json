{
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "${configDir}/temp/types",

    /* based on https://github.com/tsconfig/bases/blob/main/bases/node20.json */
    "target": "es2022",
    "lib": ["es2023"],

    /* the Vite ecosystem does not play well with types, until vite#15714 is
     * backported to Vite 4 we cannot test Vitest compatibility
     *
     * https://github.com/vitejs/vite/issues/15714 */
    "skipLibCheck": true,

    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,

    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "paths": {
      "html-validate": ["./src"]
    }
  },
  "include": ["./src/**/*.ts"]
}
