{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": ".dist/",

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types/",

    "target": "es2019",
    "lib": ["es2019"],
    "module": "esnext",
    "moduleResolution": "node",

    "typeRoots": ["./node_modules/@types", "./types"],

    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"]
}
