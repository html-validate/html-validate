{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": ".dist/",

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "temp/types/",

    "target": "es2019",
    "lib": ["es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,

    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,

    "paths": {
      "html-validate": ["./src"]
    }
  },
  "include": ["./src/**/*.ts"]
}
