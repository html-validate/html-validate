{
  "extends": ["@tsconfig/strictest", "@tsconfig/node20", "@tsconfig/node-ts"],
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist",

    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "${configDir}/temp/types",
    "sourceMap": true,

    "module": "esnext",
    "moduleResolution": "bundler",

    "exactOptionalPropertyTypes": false, // does not work well with third-party libraries
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false, // we handle this with eslint

    /* technical debt */
    "erasableSyntaxOnly": false,
    "noUncheckedIndexedAccess": false,
    "verbatimModuleSyntax": false,

    "paths": {
      "html-validate": ["./src"]
    }
  },
  "include": ["./src/**/*.ts"]
}
