{
  "name": "html-validate",
  "version": "0.24.1",
  "description": "html linter",
  "keywords": [
    "html",
    "lint",
    "validator",
    "html-validate"
  ],
  "author": "David Sveningsson <ext@sidvind.com>",
  "license": "MIT",
  "homepage": "https://html-validate.org",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/html-validate/html-validate.git"
  },
  "bugs": {
    "url": "https://gitlab.com/html-validate/html-validate/issues/new"
  },
  "main": "build/shim.js",
  "engines": {
    "node": ">=8.0"
  },
  "bin": {
    "html-validate": "bin/html-validate.js"
  },
  "scripts": {
    "prettier:check": "prettier '**/*.{ts,js,json,md,scss}' --list-different",
    "prettier:write": "prettier '**/*.{ts,js,json,md,scss}' --write",
    "start": "grunt connect",
    "test": "jest --ci",
    "lint": "grunt eslint tslint",
    "version": "./scripts/update-changelog.sh && git add CHANGELOG.md",
    "preversion": "./scripts/validate-version.sh",
    "postversion": "git push --follow-tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "./scripts/pre-push"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,md,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0",
    "acorn-walk": "^6.1.1",
    "ajv": "^6.10.0",
    "better-ajv-errors": "^0.6.1",
    "chalk": "^2.4.2",
    "deepmerge": "^3.2.0",
    "eslint": "^5.15.3",
    "espree": "^5.0.1",
    "glob": "^7.1.3",
    "json-merge-patch": "^0.2.3",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@types/babel__code-frame": "^7.0.1",
    "@types/chai": "^4.1.7",
    "@types/estree": "0.0.39",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.11",
    "@types/json-merge-patch": "0.0.4",
    "@types/minimist": "^1.2.0",
    "@types/node": "^11.11.4",
    "@types/strip-ansi": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "autoprefixer": "^9.5.0",
    "babelify": "^10.0.0",
    "bootstrap-sass": "^3.4.1",
    "canonical-path": "^1.0.0",
    "cssnano": "^4.1.10",
    "dgeni": "^0.4.12",
    "dgeni-packages": "^0.27.2",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-sidvind": "^1.3.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "font-awesome": "^4.7.0",
    "grunt": "^1.0.4",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-connect": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-eslint": "^21.0.0",
    "grunt-exec": "^3.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-sass": "^3.0.2",
    "grunt-ts": "^6.0.0-beta.22",
    "grunt-tslint": "^5.0.2",
    "highlight.js": "^9.15.6",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-junit": "^6.3.0",
    "jquery": "^3.3.1",
    "lint-staged": "^8.1.5",
    "load-grunt-tasks": "^4.0.0",
    "prettier": "^1.16.4",
    "sass": "^1.17.3",
    "serve-static": "^1.13.2",
    "strip-ansi": "^5.2.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/index.ts",
      "!src/matchers.ts",
      "!src/shim.ts",
      "!src/cli/html-validate.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "temp",
          "outputName": "./jest.xml"
        }
      ]
    ],
    "roots": [
      "<rootDir>/docs",
      "<rootDir>/elements",
      "<rootDir>/src"
    ],
    "snapshotSerializers": [
      "pretty-format/build/plugins/ConvertAnsi"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.+|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
