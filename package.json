{
  "name": "html-validate",
  "version": "0.1.3",
  "description": "html linter",
  "keywords": [
    "html",
    "lint",
    "validator"
  ],
  "author": "David Sveningsson <ext@sidvind.com>",
  "license": "MIT",
  "homepage": "https://git.sidvind.com/html-validate/html-validate",
  "repository": {
    "type": "git",
    "url": "https://git.sidvind.com/html-validate/html-validate.git"
  },
  "bugs": {
    "url": "https://git.sidvind.com/html-validate/html-validate/issues/new"
  },
  "main": "html-validate.js",
  "bin": {
    "html-validate": "html-validate.js"
  },
  "scripts": {
    "test": "grunt eslint mochaTest smoketest",
    "mocha": "nyc mocha --opts mocha.opts",
    "version": "./update-changelog.sh && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "eslint": "^4.5.0",
    "glob": "^7.1.2",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.24",
    "chai": "^3.5.0",
    "chai-spies": "^0.7.1",
    "chai-subset": "^1.5.0",
    "columnify": "^1.5.4",
    "eslint-config-sidvind": "^1.2.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-typescript": "^0.7.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-eslint": "^20.0.0",
    "grunt-mocha-test": "^0.13.2",
    "grunt-ts": "^6.0.0-beta.16",
    "istanbul": "^0.4.5",
    "load-grunt-tasks": "^3.5.2",
    "mocha": "^3.5.0",
    "nyc": "^11.2.1",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.2.0",
    "typescript": "^2.4.2",
    "typescript-eslint-parser": "^7.0.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts"
    ],
    "reporter": [
      "text-summary"
    ]
  }
}
