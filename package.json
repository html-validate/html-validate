{
  "name": "html-validate",
  "version": "0.10.0",
  "description": "html linter",
  "keywords": [
    "html",
    "lint",
    "validator",
    "html-validate"
  ],
  "author": "David Sveningsson <ext@sidvind.com>",
  "license": "MIT",
  "homepage": "https://html-validate.sidvind.com",
  "repository": {
    "type": "git",
    "url": "https://git.sidvind.com/html-validate/html-validate.git"
  },
  "bugs": {
    "url": "https://git.sidvind.com/html-validate/html-validate/issues/new"
  },
  "main": "shim.js",
  "engines": {
    "node": ">=8.0"
  },
  "bin": {
    "html-validate": "bin/html-validate.js"
  },
  "scripts": {
    "test": "jest",
    "lint": "grunt eslint",
    "version": "./scripts/update-changelog.sh && git add CHANGELOG.md",
    "preversion": "./scripts/validate-version.sh",
    "postversion": "git push --follow-tags"
  },
  "dependencies": {
    "deepmerge": "^2.1.1",
    "eslint": "^5.3.0",
    "espree": "^4.0.0",
    "glob": "^7.1.2",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/estree": "0.0.39",
    "@types/jest": "^23.3.1",
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.7.1",
    "autoprefixer": "^9.1.1",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "bootstrap-sass": "^3.3.7",
    "canonical-path": "0.0.2",
    "cssnano": "^4.0.5",
    "dgeni": "^0.4.10",
    "dgeni-packages": "^0.26.3",
    "eslint-config-sidvind": "^1.3.2",
    "eslint-plugin-jest": "^21.21.0",
    "eslint-plugin-typescript": "^0.12.0",
    "font-awesome": "^4.7.0",
    "grunt": "^1.0.3",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "^1.3.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-connect": "^1.0.2",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-eslint": "^21.0.0",
    "grunt-exec": "^3.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-sass": "^3.0.1",
    "grunt-ts": "^6.0.0-beta.21",
    "highlight.js": "^9.12.0",
    "jest": "^23.5.0",
    "jquery": "^3.3.1",
    "load-grunt-tasks": "^4.0.0",
    "sass": "^1.12.0",
    "serve-static": "^1.13.2",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/index.ts"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupTestFrameworkScriptFile": "./jest.setup.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
