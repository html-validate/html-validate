{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "noEmit": true,

    "target": "es2019",
    "lib": ["es2019"],
    "module": "esnext",
    "moduleResolution": "node",

    "allowJs": true,
    "checkJs": true,

    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,

    "paths": {
      "html-validate/jest": ["../../../dist/types/jest.d.ts"],
      "html-validate": ["../../../dist/types/index.d.ts"]
    }
  },
  "include": ["**/*.js", "**/*.ts"]
}
